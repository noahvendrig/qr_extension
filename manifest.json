{
    "name": "QRGen",
    "version": "0.1.1",
    "manifest_version": 2,
    "description": "Generates a QR code for the current webpage",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "popup.css"
            ]
        }
    ],
    "browser_action": {
        "default_title": "QRGen",
        "default_icon": "qr-code.png",
        "default_popup": "popup.html"
    },
    "background": {},
    "permissions": [
        "tabs"
    ]
}